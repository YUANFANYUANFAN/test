import os

# 遍历目录中，带Web的文件夹，判断文件夹名 下划线 个数，如果=2，则删除第一个下划线前的所有字符串

path = "V:\渲染中国\资产\室内\_完成"
for root, dirs, files in os.walk(path):
    for d in dirs:
        dir_name = (os.path.join(root, d))
        if  ("Web" in dir_name) == True:  # 如果地址字符串包含Web字符串
            # print("原地址:",dir_name)

            name = os.path.basename(dir_name) # 获得最后一个路径名
            # print(name)

            if (name.count("_")) == 2: # 计算字符串中出现字符的个数
                SN = name.split("_")[1] # 截取出了 序列号
                New_dir_Name = SN +"_Web"
                New_dir_Path = os.path.dirname(dir_name) +"\\"+ New_dir_Name # 获得上一级目录 + 新地址
                os.renames(dir_name,New_dir_Path)

